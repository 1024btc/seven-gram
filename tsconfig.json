{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "modules/*": [
        "./src/modules/*"
      ]
    },
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "/databases",
    "/sessions.json",
    "/dist"
  ]
}
